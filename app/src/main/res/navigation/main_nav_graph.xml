<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@+id/navigation_cattle_list">

    <fragment
        android:id="@+id/navigation_cattle_list"
        android:name="com.pr656d.cattlenotes.ui.main.cattle.list.CattleListFragment"
        android:label="@string/cattle"
        tools:layout="@layout/fragment_cattle_list">

        <action
            android:id="@+id/navigate_to_add_cattle"
            app:destination="@id/addEditCattleScreen"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>

        <action
            android:id="@+id/navigate_to_cattle_details"
            app:destination="@id/cattleDetailsScreen"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/cattleDetailsScreen"
        android:name="com.pr656d.cattlenotes.ui.main.cattle.details.CattleDetailsFragment"
        android:label="@string/cattle_details"
        tools:layout="@layout/fragment_cattle_details">

        <argument
            android:name="cattle_tag_number"
            app:argType="string" />

        <action
            android:id="@+id/navigate_to_active_breeding"
            app:destination="@id/activeBreedingScreen"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/navigate_to_add_breeding"
            app:destination="@id/addBreedingScreen"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/navigate_to_breeding_history"
            app:destination="@id/breedingHistoryScreen"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/addEditCattleScreen"
        android:name="com.pr656d.cattlenotes.ui.main.cattle.addedit.AddEditCattleFragment"
        android:label="@string/add_cattle"
        tools:layout="@layout/fragment_add_edit_cattle">

        <argument
            android:name="cattle_tag_number"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null"/>

        <action
            android:id="@+id/navigate_to_active_breeding"
            app:destination="@id/activeBreedingScreen"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/navigate_to_add_breeding"
            app:destination="@id/addBreedingScreen"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/navigate_to_breeding_history"
            app:destination="@id/breedingHistoryScreen"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/activeBreedingScreen"
        android:name="com.pr656d.cattlenotes.ui.main.cattle.breeding.active.ActiveBreedingFragment"
        android:label="@string/active_breeding"
        tools:layout="@layout/fragment_active_breeding">

        <argument
            android:name="cattle_tag_number"
            app:argType="string"/>
    </fragment>

    <fragment
        android:id="@+id/addBreedingScreen"
        android:name="com.pr656d.cattlenotes.ui.main.cattle.breeding.add.AddBreedingFragment"
        android:label="@string/add_new_breeding"
        tools:layout="@layout/fragment_add_breeding">

    </fragment>

    <fragment
        android:id="@+id/breedingHistoryScreen"
        android:name="com.pr656d.cattlenotes.ui.main.cattle.breeding.history.BreedingHistoryFragment"
        android:label="@string/breeding_history"
        tools:layout="@layout/fragment_breeding_history">

    </fragment>

    <fragment
        android:id="@+id/navigation_timeline"
        android:name="com.pr656d.cattlenotes.ui.main.timeline.TimelineFragment"
        android:label="@string/timeline"
        tools:layout="@layout/fragment_timeline" />

    <fragment
        android:id="@+id/navigation_milking"
        android:name="com.pr656d.cattlenotes.ui.main.milking.MilkingFragment"
        android:label="@string/milking"
        tools:layout="@layout/fragment_milking" />

    <fragment
        android:id="@+id/navigation_cashflow"
        android:name="com.pr656d.cattlenotes.ui.main.cashflow.CashflowFragment"
        android:label="@string/cashflow"
        tools:layout="@layout/fragment_cashflow" />

</navigation>