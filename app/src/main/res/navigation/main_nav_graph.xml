<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@+id/cattleListScreen">

    <fragment
        android:id="@+id/cattleListScreen"
        android:name="com.pr656d.cattlenotes.ui.main.cattle.list.CattleListFragment"
        android:label="@string/cattle"
        tools:layout="@layout/fragment_cattle_list">

        <action
            android:id="@+id/navigate_to_add_cattle"
            app:destination="@id/addCattleScreen" />

        <action
            android:id="@+id/navigate_to_cattle_details"
            app:destination="@id/cattleDetailsScreen"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out" />
    </fragment>

    <fragment
        android:id="@+id/cattleDetailsScreen"
        android:name="com.pr656d.cattlenotes.ui.main.cattle.details.CattleDetailsFragment"
        android:label="@string/cattle_details"
        tools:layout="@layout/fragment_cattle_details">

        <argument
            android:name="cattle"
            app:argType="com.pr656d.cattlenotes.model.Cattle"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

    <fragment
        android:id="@+id/addCattleScreen"
        android:name="com.pr656d.cattlenotes.ui.main.cattle.add.AddCattleFragment"
        android:label="@string/add_cattle"
        tools:layout="@layout/fragment_add_cattle">

        <action
            android:id="@+id/navigate_to_progress_dialog"
            app:destination="@id/progressDialogScreen" />

        <action
            android:id="@+id/navigate_to_cattle_details"
            app:destination="@id/cattleDetailsScreen"
            app:popUpTo="@id/cattleListScreen"/>
    </fragment>

    <dialog
        android:id="@+id/progressDialogScreen"
        android:name="com.pr656d.cattlenotes.shared.ui.dialog.ProgressDialog"
        tools:layout="@layout/progress_dialog">

        <argument
            android:name="message"
            app:argType="integer"/>
    </dialog>

    <fragment
        android:id="@+id/timelineScreen"
        android:name="com.pr656d.cattlenotes.ui.main.timeline.TimelineFragment"
        android:label="@string/timeline"
        tools:layout="@layout/fragment_timeline" />

    <fragment
        android:id="@+id/milkingScreen"
        android:name="com.pr656d.cattlenotes.ui.main.milking.MilkingFragment"
        android:label="@string/milking"
        tools:layout="@layout/fragment_milking" />

    <fragment
        android:id="@+id/cashflowScreen"
        android:name="com.pr656d.cattlenotes.ui.main.cashflow.CashflowFragment"
        android:label="@string/cashflow"
        tools:layout="@layout/fragment_cashflow" />

    <dialog
        android:id="@+id/mainBottomNavigationDrawer"
        android:name="com.pr656d.cattlenotes.ui.main.MainBottomNavigationSheet"
        tools:layout="@layout/main_navigation_drawer"/>

</navigation>