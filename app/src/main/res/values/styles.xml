<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="AppTheme.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="AppTheme.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="AppTheme.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="AppTheme.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="AppTheme.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="AppTheme.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="AppTheme.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="AppTheme.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="AppTheme.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="AppTheme.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="AppTheme.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="AppTheme.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="AppTheme.AppTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textAppearance">@style/AppTheme.Body1</item>
    </style>

    <style name="AppTheme.AppTextInputDate" parent="AppTheme.AppTextInputEditText">
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:cursorVisible">false</item>
    </style>

    <style name="AppTheme.AppTextInputEditText" parent="Theme.MaterialComponents.Light">
        <item name="android:paddingStart">@dimen/box_padding</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@drawable/selector_text_color</item>
        <item name="android:textAppearance">@style/AppTheme.Body1</item>
    </style>

    <style name="AppTheme.AppTextInputEditText.Disabled" parent="AppTheme.AppTextInputEditText">
        <item name="android:editable">false</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="AppTheme.TextInputParent" parent="AppTheme.AppTextInputDate"/>

    <style name="AppTheme.MaterialCheckBox">
        <item name="android:background">@drawable/outline</item>
        <item name="android:padding">@dimen/box_padding</item>
        <item name="android:textColor">@drawable/selector_text_color</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textAppearance">@style/AppTheme.Body1</item>
    </style>

    <style name="AppTheme.MaterialCheckBox.Disabled">
        <item name="android:background">@drawable/outline</item>
        <item name="android:padding">@dimen/box_padding</item>
        <item name="android:textColor">@drawable/selector_text_color</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textAppearance">@style/AppTheme.Body1</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="AppTheme.MaterialSwitch">
        <item name="android:background">@drawable/outline</item>
        <item name="android:paddingStart">@dimen/box_padding</item>
        <item name="android:paddingEnd">@dimen/padding_micro</item>
        <item name="android:paddingTop">@dimen/box_padding</item>
        <item name="android:paddingBottom">@dimen/box_padding</item>
        <item name="android:textColor">@drawable/selector_text_color</item>
        <item name="android:textAppearance">@style/AppTheme.Body1</item>
    </style>

    <style name="AppTheme.MaterialSwitch.Disabled" parent="AppTheme.MaterialSwitch">
        <item name="android:enabled">false</item>
    </style>

    <!--  For exposed drop down menu  -->
    <style name="AppTheme.AutoCompleteTextView">
        <item name="android:editable">false</item>
        <item name="android:paddingStart">@dimen/box_padding</item>
        <item name="android:textColor">@drawable/selector_text_color</item>
        <item name="android:textAppearance">@style/AppTheme.Body1</item>
    </style>

    <style name="AppTheme.Tab" parent="Widget.MaterialComponents.TabLayout" />

    <style name="AppTheme.Chip" parent="TextAppearance.MaterialComponents.Chip" />

    <style name="AppTheme.AppBar" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">?attr/colorSurface</item>
        <!--  Window decor  -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">@bool/use_light_status</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- Widget styles -->

    <style name="Widget.CattleNOTES" parent="@android:style/Widget.Material" />

    <!-- Settings -->
    <style name="Widget.CattleNOTES.Settings" />

    <style name="Widget.CattleNOTES.Settings.Button">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:minHeight">?listPreferredItemHeightSmall</item>
        <item name="android:paddingBottom">@dimen/padding_normal</item>
        <item name="android:paddingRight">?listPreferredItemPaddingEnd</item>
        <item name="android:paddingStart">?listPreferredItemPaddingStart</item>
        <item name="android:paddingTop">@dimen/padding_normal</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAppearance">?textAppearanceBody2</item>
    </style>
</resources>
