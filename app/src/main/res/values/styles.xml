<resources>

    <style name="AppTheme.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="AppTheme.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="AppTheme.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="AppTheme.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="AppTheme.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="AppTheme.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="AppTheme.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="AppTheme.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="AppTheme.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="AppTheme.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="AppTheme.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="AppTheme.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <!-- Widget styles -->
    <style name="Widget.CattleNOTES" parent="@android:style/Widget.Material" />

    <!--  AddEdit Breeding title  -->
    <style name="Widget.CattleNOTES.BreedingTitle" parent="AppTheme.Body2">
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!--  Alert dialog  -->
    <style name="AlertDialog.TitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="AlertDialog.TitlePanel" parent="MaterialAlertDialog.MaterialComponents.Title.Panel">
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">?attr/dialogPreferredPadding</item>
    </style>

    <style name="AlertDialog.BodyText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="AlertDialog.ButtonBar" parent ="@style/Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
    </style>

    <style name="Widget.CattleNOTES.Button" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.CattleNOTES.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.CattleNOTES.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textAppearance">@style/AppTheme.Body1</item>
    </style>

    <style name="Widget.CattleNOTES.TextInputDate" parent="Widget.CattleNOTES.TextInputEditText">
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:cursorVisible">false</item>
    </style>

    <style name="Widget.CattleNOTES.TextInputEditText" parent="Theme.MaterialComponents.Light">
        <item name="android:paddingStart">@dimen/box_padding</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/always_color_on_surface</item>
        <item name="android:textAppearance">@style/AppTheme.Body1</item>
    </style>

    <style name="Widget.CattleNOTES.TextInputEditText.Disabled" parent="Widget.CattleNOTES.TextInputEditText">
        <item name="android:editable">false</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="Widget.CattleNOTES.TextInputParent" parent="Widget.CattleNOTES.TextInputEditText">
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:cursorVisible">false</item>
    </style>

    <style name="Widget.CattleNOTES.MaterialCheckBox">
        <item name="android:background">@drawable/outline</item>
        <item name="android:padding">@dimen/box_padding</item>
        <item name="android:textColor">@color/always_color_on_surface</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textAppearance">@style/AppTheme.Body1</item>
    </style>

    <style name="Widget.CattleNOTES.MaterialCheckBox.Disabled">
        <item name="android:background">@drawable/outline</item>
        <item name="android:padding">@dimen/box_padding</item>
        <item name="android:textColor">@color/always_color_on_surface</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textAppearance">@style/AppTheme.Body1</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="Widget.CattleNOTES.MaterialSwitch">
        <item name="android:background">@drawable/outline</item>
        <item name="android:paddingStart">@dimen/box_padding</item>
        <item name="android:paddingEnd">@dimen/padding_micro</item>
        <item name="android:paddingTop">@dimen/box_padding</item>
        <item name="android:paddingBottom">@dimen/box_padding</item>
        <item name="android:textColor">@color/always_color_on_surface</item>
        <item name="android:textAppearance">@style/AppTheme.Body1</item>
    </style>

    <style name="Widget.CattleNOTES.MaterialSwitch.Disabled" parent="Widget.CattleNOTES.MaterialSwitch">
        <item name="android:enabled">false</item>
    </style>

    <!--  For exposed drop down menu  -->
    <style name="Widget.CattleNOTES.AutoCompleteTextView">
        <item name="android:editable">false</item>
        <item name="android:paddingStart">@dimen/box_padding</item>
        <item name="android:textColor">@color/always_color_on_surface</item>
        <item name="android:textAppearance">@style/AppTheme.Body1</item>
    </style>

    <style name="Widget.CattleNOTES.Tab" parent="Widget.MaterialComponents.TabLayout" />

    <style name="Widget.CattleNOTES.Chip" parent="TextAppearance.MaterialComponents.Chip" />

    <style name="Widget.CattleNOTES.AppBar" parent="Widget.MaterialComponents.AppBarLayout.Surface" />

    <!--  Permissions  -->
    <style name="Widget.CattleNOTES.Permissions" />

    <style name="Widget.CattleNOTES.Permissions.Headers" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:background">?attr/colorSecondary</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <!-- Settings -->
    <style name="Widget.CattleNOTES.Settings" />

    <!-- Section headers -->
    <style name="TextAppearance.CattleNOTES.Overline" parent="@style/AppTheme.Body2">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Widget.CattleNOTES.Settings.Button">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:minHeight">?listPreferredItemHeightSmall</item>
        <item name="android:paddingBottom">@dimen/padding_normal</item>
        <item name="android:paddingRight">?listPreferredItemPaddingEnd</item>
        <item name="android:paddingStart">?listPreferredItemPaddingStart</item>
        <item name="android:paddingTop">@dimen/padding_normal</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAppearance">?textAppearanceBody2</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Widget.CattleNOTES.Settings.ButtonText">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAppearance">?textAppearanceBody2</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="Widget.CattleNOTES.About" />

    <style name="Widget.CattleNOTES.About.Button">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:minHeight">?listPreferredItemHeightSmall</item>
        <item name="android:paddingBottom">@dimen/padding_normal</item>
        <item name="android:paddingRight">?listPreferredItemPaddingEnd</item>
        <item name="android:paddingStart">?listPreferredItemPaddingStart</item>
        <item name="android:paddingTop">@dimen/padding_normal</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAppearance">?textAppearanceBody2</item>
    </style>

    <!--  Profile  -->
    <style name="Widget.CattleNOTES.Profile" />

    <style name="Widget.CattleNOTES.Profile.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Widget.CattleNOTES.Profile.LogoutButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.CattleNOTES.Timeline.MaterialCardViewOutlined" parent="Widget.MaterialComponents.CardView">
        <item name="strokeWidth">@dimen/default_outlined_card_stroke_width</item>
        <item name="strokeColor">@color/stroke_color</item>
        <item name="cardElevation">@dimen/default_outlined_card_elevation</item>
    </style>

    <!--  Breeding history  -->
    <style name="Widget.CattleNOTES.BreedingHistory" />

    <style name="Widget.CattleNOTES.BreedingHistory.ItemBreedingHistoryMaterialCardView" parent="Widget.CattleNOTES.Timeline.MaterialCardViewOutlined" />

    <!--  Timeline  -->
    <style name="Widget.CattleNOTES.Timeline" />

    <style name="Widget.CattleNOTES.Timeline.ItemTimelineMaterialCardView" parent="Widget.CattleNOTES.Timeline.MaterialCardViewOutlined">
        <item name="android:checkable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Widget.CattleNOTES.DateHeaders">
        <item name="android:width">@dimen/day_header_decor_width</item>
        <item name="android:height">@dimen/day_header_decor_height</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/day_header_text_size</item>
        <item name="verticalBias">0.50</item>
    </style>

    <!--  Milking  -->
    <style name="Widget.CattleNOTES.Milking" />

    <style name="Widget.CattleNOTES.Milking.ItemTitle" parent="AppTheme.Body2">
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="Widget.CattleNOTES.Milking.ItemValue" parent="AppTheme.Headline6">
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="Widget.CattleNOTES.BreedingHistory.ItemMilkingMaterialCardView" parent="Widget.CattleNOTES.Timeline.MaterialCardViewOutlined">
        <item name="background">?selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Widget.CattleNOTES.Milking.ItemMilkingContentCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/corner_radius_milking_content</item>
        <item name="cardElevation">@dimen/default_outlined_card_elevation</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
    </style>

</resources>
